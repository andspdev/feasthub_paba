<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused state -->
    <item android:state_focused="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF4081" /> <!-- Change the color to your desired focus color -->
            <corners android:radius="20dp" /> <!-- Adjust the radius to control the button's roundness -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2196F3" /> <!-- Change the color to your desired default color -->
            <corners android:radius="20dp" /> <!-- Adjust the radius to control the button's roundness -->
        </shape>
    </item>

</selector>